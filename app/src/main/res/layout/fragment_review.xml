<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:id="@+id/saved_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_placeholder_text"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/saved_mood_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mood_placeholder_text"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/saved_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_placeholder_text"/>
</LinearLayout>